@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <style>

        .navbar .nav-link {
            color: #fff !important;
        }
    </style>

    <div id="intro" class="bg-image shadow-2-strong" style="padding-bottom: 2.5rem; padding-top: 2.5rem">
        <div class="mask" style="background-color:#0033cc;">
            <div class="container d-flex align-items-center justify-content-center text-center h-100">
                <div class="text-white">
                    <h1 class="mb-3">Welcome to the website</h1>
                    <h5 class="mb-4">On this website we will be greeting you in Turkish way! </h5>

                </div>
            </div>
        </div>
    </div>

</header>

<div ng-controller="HomeController">
    <div class="row">
        <div class="col-md-6 gx-5 mb-4">
            <div class="bg-image hover-overlay ripple shadow-2-strong rounded-5" data-mdb-ripple-color="light">
                <img src="https://blog.darwinbox.com/hubfs/Blog%20Image-2.png" class="img-fluid" />
                <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                </a>
            </div>
        </div>

        <div class="col-md-6 gx-5 mb-4">
            <h4><strong>Enter your name here:</strong></h4>
            <div class="form-outline mb-4">
                <input class="form-control form-control-lg" placeholder="Adınız" ng-model="GeetingName" />
                <label class="form-label">Name</label>
            </div>

            <div class="text-center text-lg-start mt-4 pt-2">
                <button type="button" class="btn btn-primary btn-lg"
                        style="padding-left: 2.5rem; padding-right: 2.5rem;" ng-click="GetGeeting()">
                    Gönder
                </button>
            </div>

            <div class="col-md-6 gx-5 mb-4">
                <h4 style="padding-top: 2.5rem; padding-right: 2.5rem;"><strong>{{returnData}}</strong></h4>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script src="~/pages/home.js"></script>
}
